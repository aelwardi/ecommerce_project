{% extends 'base.html.twig' %}

{% block body %}
    <div class="container my-5">
        <h1>Espace membre</h1>
        <div class="row">
            <div class="col-md-3">
                {% include 'account/_menu.html.twig' %}
            </div>
            <div class="col-md-9">
                <div class="d-flex justify-content-between">
                    <h5>Mes adresses</h5>
                    <a class="btn btn-light" href="{{ path('app_account_address_form') }}">Ajouter une adresse</a>
                </div>
                {% if app.user.addresses|length == 0 %}
                    <p>Vous n'avez pas encore d'adresse.</p>
                    {% else %}
                        <div class="row">
                            {% for address in app.user.addresses %}
                                <div class="col-md-3 mt-3">
                                    <div class="bg-light p-2 text-center ">
                                        <strong>{{ address.firstName }} {{ address.lastName }}</strong>
                                        {{ address.address }}<br/>
                                        {{ address.postal }} {{ address.city }}<br/>
                                        {{ address.country }}<br/>
                                        <a href="{{ path('app_account_address_form', { id : address.id }) }}" class="small text-secondary">Ã©diter</a>
                                        <a href="{{ path('app_account_address_delete', { id : address.id }) }}" class="small text-secondary">Supprimer</a>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}
